%  This is a basic beamer style file for students beginning to present using Latex.  %
%  Features:                                                                         %
%  - Logo and page number in footer.						     %
%  - Rendering a minimal bibliography 						     %
%  - Defining `blocks'.                                                              %  
%  Usage: In your main document: \includepackage{basic_style.sty}                    %
%  Author: Sam Windels.                                                              %
%  Email: sam.windels@gmail.com                                                      %
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%


%% GENERAL FORMATTING

% Remove navigation symbols from lower right
\setbeamertemplate{navigation symbols}{}

% Set footer: bsc logo and page numbering
 \setbeamertemplate{footline}{%
        \includegraphics[width=.2\textwidth]{BSC_logo.jpeg}%
        \hfill%
        \insertframenumber\,/\,\inserttotalframenumber\kern1em%
 }

% Alternatively, if you only want the frame number or the logo:
% \setbeamertemplate{footline}[frame number]
% \logo{\includegraphics[width=.1\textwidth]{BSC_logo.jpeg}}


%% BIBLIOGRAPHY 

% Use Biblatex to render citations
\usepackage[style=numeric,maxnames=2]{biblatex} % style is numeric, only two authors are mentioned to save space
\renewcommand*{\bibfont}{\small} % font size of references is set to small to save space

% remove some fields from citation to save space 
\AtEveryBibitem{
   \clearfield{month}
   \clearfield{series}
   \clearfield{venue}
   \clearname{editor}
   \clearlist{publisher}
   \clearlist{location} % alias to field 'address'
   \clearfield{doi}
   \clearfield{url}
   \clearfield{venue}
   \clearfield{issn}
   \clearfield{isbn}
   \clearfield{urldate}
   \clearfield{eventdate}
   %\clearfield{pages}
   %\clearfield{booktitle}
   %\clearfield{journaltitle}
   %\clearfield{number}
   %\clearfield{volume}
}

% In the bibliography, replace the icon with numbered entries
\setbeamertemplate{bibliography item}{\insertbiblabel}


%% BLOCKS
% This could be done in a more advanced/flexible way by using theorems and defining theoremstyles.
% However, theoremstyle seems broken in beamer (not all parameters are interpreted).

% set blocks to rounded corners
\setbeamertemplate{blocks}[rounded]

%set color for `alertblock'
\setbeamercolor{block body alerted}{bg=alerted text.fg!10}
\setbeamercolor{block title alerted}{bg=alerted text.fg!20}

%set color for `block'
\setbeamercolor{block body}{bg=structure!10}
\setbeamercolor{block title}{bg=structure!20}

%set color for `exampleblock'
\setbeamercolor{block body example}{bg=green!10}
\setbeamercolor{block title example}{bg=green!20}
